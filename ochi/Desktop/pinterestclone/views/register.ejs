<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[35vw]  bg-white px-14 py-4 rounded-3xl">
      <h1 class="text-3xl tracking-tight text-center font-semibold capitalize text-zinc-800 leading-none">Welcome to Pinterest</h1>
      <p class="mt-1 mb-9 text-center">Find new ideas to try</p>
      <form action="/register" method="post">
        <input class=" border-2 rounded-lg block mt-2 w-full px-3 py-3" type="email" name="email" placeholder="email">
        <input class=" border-2 rounded-lg block mt-2 w-full px-3 py-3" type="text" name="username" placeholder="username">
        <input class=" border-2 rounded-lg block mt-2 w-full px-3 py-3" type="password" name="password" placeholder="password">
        <input class=" block mt-5 w-full px-3 py-3 bg-[red] text-white rounded-full" type="submit" value="Continue">
        <p class="text-xs font-semibold mt-9 w-2/3 mx-auto text-center">By continuing, you agree to Pinterest's <b>Terms of Service</b> and acknowledge you've read our <b>Privacy Policy. Notice at collection.</b> </p>
      </form>
      <a class="inline-block text-base w-full text-center mt-5 font-medium" href="/">Already a member? <b>Login</b></a>
    </div>
  </div>
<% include ./partials/footer.ejs %>